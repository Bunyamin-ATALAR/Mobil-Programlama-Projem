<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AramaActivity"
    android:orientation="vertical"
    android:textAlignment="center"
    android:gravity="center"
    android:background="#D23BFFC7"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Öğrenci Numara Çevirici Ekranı"
        android:textAlignment="center"
        android:layout_marginBottom="150dp"
        android:textColor="@color/black"
        android:textSize="23dp"/>

    <EditText
        android:id="@+id/etnumaram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:text="95180026"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/etmesajim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Mesaj İçeriğinizi giriniz"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnmesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Mesajı Gönder"
        android:textColor="#FFC107"/>

</LinearLayout>